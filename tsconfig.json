{
  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "outDir": "./dist",
    "strict": true,
    "rootDir": "./",
    "baseUrl": ".",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}