{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "target": "ES6",
    "module": "Node16",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "baseUrl": ".",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@restackio/ai": ["node_modules/@restackio/ai"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
